{
	"manifest_version": 2,
	"name": "Hide Medium",
	"version": "0.2",
	"description": "Hides starred articles in your Medium's home page.",
	"homepage_url": "https://github.com/marcaureln/hidemedium",
	"icons": {
		"48": "icons/icon.svg",
		"96": "icons/icon.svg"
	},
	"permissions": ["activeTab"],
	"page_action": {
		"browser_style": true,
		"default_icon": {
			"19": "icons/icon.svg",
			"38": "icons/icon.svg"
		},
		"default_title": "Show/Hide ‚≠ê articles on Medium",
		"show_matches": ["*://*.medium.com/"]
	},
	"content_scripts": [
		{
			"matches": ["*://*.medium.com/"],
			"js": ["content_scripts/hide.js"]
		}
	],
	"background": {
		"scripts": ["app.js"]
	}
}
